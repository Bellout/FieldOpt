{
    "Global": {
        "Name": "TestRun",
        "OutputDirectory": "~/FieldOpt/output",
        "Verbose": false
    },
    "Optimizer": {
        "Type": "Compass",
        "Parameters": {
            "MaxEvaluations": 10,
            "InitialStepLength": 50.0,
            "MinimumStepLength": 1.0
        },
        "Objective": {
            "Type": "WeightedSum",
            "WeightedSumComponents": [
                {
                    "Coefficient": 1.0, "Property": "CumulativeOilProduction", "TimeStep": -1,
                    "IsWellProp": false
                },
                {
                    "Coefficient": -0.2, "Property": "CumulativeWellWaterProduction", "TimeStep": 10,
                    "IsWellProp": true, "Well": "PROD"
                }
            ]
        },
        "Constraints": [
            {
                "Name": "PROD-BHP-1",
                "Type": "BHP",
                "Well": "PROD",
                "Max": 3000.0,
                "Min": 1000.0
            },
            {
                "Name": "INJ-SplinePoints-1",
                "Type": "WellSplinePoints",
                "Well": "INJ",
                "WellSplinePointsInputType": "MaxMin",
                "WellSplinePointLimits": [
                    {
                        "Max": [40.0,10.0,40.0],
                        "Min": [0.0,0.0,0.0]
                    },
                    {
                        "Max": [40.0,40.0,40.0],
                        "Min": [20.0,40.0,20.0]
                    }
                ]
            }

        ]
    },
    "Simulator": {
        "Type": "ECLIPSE",
        "Commands": ["tcsh -c @eclipse"],
        "DriverPath": "../../examples/ECLIPSE/HORZWELL/HORZWELL.DATA"
    },
    "Model": {
        "Reservoir": {
            "Type": "ECLIPSE",
            "Path": "../../examples/ECLIPSE/HORZWELL/HORZWELL.EGRID"
        },
        "Wells": [
            {
                "Name": "PROD",
                "Type": "Producer",
                "DefinitionType": "WellBlocks",
                "PreferedPhase": "Oil",
                "Heel": [0,0,0],
                "WellboreRadius": 0.75,
                "Direction": "X",
                "WellBlocks": [
                    [0,4,2],
                    [1,4,2],
                    [2,4,2],
                    [3,4,2]
                ],
                "Completions": [
                    {
                        "Type": "Perforation",
                        "WellBlock": [1,4,2],
                        "TransmissibilityFactor": 1.0
                    },
                    {
                        "Type": "Perforation",
                        "WellBlock": [2,4,2],
                        "TransmissibilityFactor": 1.0
                    }
                ],
                "Controls": [
                    {
                        "TimeStep": 0,
                        "State": "Open",
                        "Mode": "BHP",
                        "BHP": 2000.0
                    }
                ],
                "Variables": [
                    {
                        "Name": "PROD-BHP-1",
                        "Type": "BHP",
                        "TimeSteps": [0, 50, 365]
                    }

                ]
            },
            {
                "Name": "INJ",
                "Type": "Injector",
                "DefinitionType": "WellSpline",
                "PreferedPhase": "Water",
                "Heel": [2,0,2],
                "WellboreRadius": 0.75,
                "Direction": "X",
                "SplinePoints": [
                    [20.0,0.0,20.0],
                    [20.0,40.0,20.0]
                ],
                "Controls": [
                    {
                        "TimeStep": 0,
                        "Type": "Water",
                        "State": "Open",
                        "Mode": "Rate",
                        "Rate": 1200.0
                    }
                ],
                "Variables": [
                    {
                        "Name": "INJ-SplinePoints-1",
                        "Type": "SplinePoints",
                        "VariableSplinePointIndices": [0,1],
                        "TimeSteps": [0]
                    }
                ]
            }
        ]
    }
}
