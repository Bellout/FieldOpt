{
    "Global": {
        "Name": "TestRun",
        "OutputDirectory": "~/FieldOpt/output",
        "Verbose": false
    },
    "Optimizer": {
        "Type": "Compass",
        "MaxEvaluations": 10,
        "Parameters": {
            "InitialStepLength": 50.0,
            "MinimumStepLength": 1.0
        },
        "Objective": {
            "Type": "Expression",
            "Expression": "CUMOIL - 0.5*CUMWAT"
        },
        "Constraints": [
            {
                "Type": "BHP",
                "Well": "PROD",
                "Max": 3000,
                "Min": 1000
            },
            {
                "Type": "SplinePoints",
                "Well": "INJ",
                "InputType": "MaxMin", // Could also be Function (z(x,y))
                "SplinePointLimits": [ // Must have same length as number of WellSpline variables in INJ well
                    {
                        "Max": [4,1,4],
                        "Min": [0,0,0]
                    },
                    {
                        "Max": [4,4,4],
                        "Min": [2,4,2]
                    }
                ]
            }

        ]
    },
    "Simulator": {
        "Type": "ECLIPSE",
        "Commands": ["csh", "@eclipse"],
        "DriverPath": "../../examples/ECLIPSE/HORZWELL/HORZWELL.DATA"
    },
    "Reservoir": {
        "Type": "EGRID",
        "Path": "../../examples/ECLIPSE/HORZWELL/HORZWELL.EGRID"
    },
    "Wells": [
        {
            "Name": "PROD",
            "Control": "BHP",
            "BHP": 2000,
            "Type": "WellBlocks",
            "Heel": [0,0,0],
            "WellBlocks": [
                [0,4,2],
                [1,4,2],
                [2,4,2],
                [3,4,2]
            ],
            "Variables": [
                {
                    "Type": "BHP",
                    "InitialValue": 2000, // Same as setting to null (defaulting)
                    "TimeSteps": [0, 50, 365]
                }

            ]
        },
        {
            "Name": "INJ",
            "Type": "WellSpline",
            "Heel": [2,0,2],
            "SplinePoints": [
                [2,0,2],
                [2,4,2]
            ],
            "Variables": [
                {
                    "Type": "SplinePoints",
                    "InitialValue": null, // Defaulting to the already given spline points
                    "TimeSteps": [0]
                }

            ]
        }

    ],
}
